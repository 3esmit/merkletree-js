{
  "name": "merkletree",
  "version": "0.1.0",
  "description": "JavaScript implementation of a Merkle Tree.",
  "scripts": {
    "build": "tsc",
    "coverage": "nyc --reporter=html --reporter=text npm test",
    "coverage:ci": "touch coverage && nyc report --reporter=json > coverage/coverage.json",
    "test": "mocha",
    "typedoc": "typedoc --out docs src"
  },
  "author": "Joseph Harrison-Lim",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.2.2"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "coverage",
      "docs",
      "dist",
      "test",
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
